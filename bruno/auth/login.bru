meta {
  name: login
  type: http
  seq: 1
}

post {
  url: {{host}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "username": "{{username}}",
    "password": "{{password}}"
  }
}

script:post-response {
  const cookies = res.getHeader("set-cookie")[0];
  
  bru.setEnvVar("authCookie",cookies);
}
